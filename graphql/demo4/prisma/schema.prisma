generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id     Int    @id @default(autoincrement())
  title  String
  author String
  name   String
  users  User[] // relation: one book can be linked to many users
}

model User {
  id     Int   @id @default(autoincrement())
  name   String
  city   String
  bookId Int
  book   Book  @relation(fields: [bookId], references: [id])
}
